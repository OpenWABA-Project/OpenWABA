# OpenWABA Environment Variables
# Copy this file to .env to use these environment variables

# Application
NODE_ENV=production
PORT=3000
API_PORT=3001
TZ=UTC

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=24h

# PostgreSQL Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=openwaba
POSTGRES_USER=openwaba_user
POSTGRES_PASSWORD=your_secure_password_here

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# WhatsApp Business API
WHATSAPP_API_URL=https://example.com/api
WHATSAPP_API_VERSION=v15.0

# Storage (for media files)
STORAGE_TYPE=local # or 's3', 'gcp', etc.
STORAGE_PATH=./uploads

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here

# Email (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@example.com

# Logging
LOG_LEVEL=info
